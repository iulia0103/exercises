<section class="container">
  <h1>New Item</h1>
  <br>
  <%= form_for @item, url: {action: "create"} do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :code %>
      <%= f.text_field :code %>

      <%= f.label :price %>
      <%= f.text_field :price %>

      <%= f.label :jewelry_id %>
      <%= f.text_field :jewelry_id %>

      <%= f.submit "Create" %>

  <% end %>
</section>
